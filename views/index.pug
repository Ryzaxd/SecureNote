extends layout

block content
  doctype html
  html(lang="en")
    head
      meta(charset="UTF-8")
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
      title Simple Note App

      style.
        body {
          font-family: Arial, sans-serif;
          background-color: #10A6B5;
          display: flex;
          justify-content: center;
          align-items: center;
          height: 100vh;
        }
        .container {
          background: #18C5D8;
          padding: 20px;
          border-radius: 10px;
          width: 400px;
          box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
        }
        h2 {
          color: #000;
        }
        input, textarea {
          width: 100%;
          margin: 5px 0;
          padding: 8px;
        }
        button {
          width: 100%;
          padding: 10px;
          margin: 5px 0;
          border: none;
          cursor: pointer;
        }
        .system-message {
          background: #E0F7FA;
          padding: 10px;
          margin-top: 10px;
        }

    body
      .container
        h2 (Not so) Secure Note!
        label Titel:
        input#noteTitle(type="text" placeholder="Skriv din titel her")

        label Tekst:
        textarea#noteText(rows="4" placeholder="Skriv din note her")

        button(onclick="saveNote()") Gem
        button(onclick="openNote()") Åben note
        button(onclick="deleteNote()") Slet note
        button(onclick="shareNote()") Del note

        .system-message#systemMessage Systembeskeder vises her.

      script.
        function saveNote() {
            document.getElementById("systemMessage").innerText = "Filen er gemt.";
        }
        function openNote() {

            document.getElementById("systemMessage").innerText = "Note åbnet.";
        }
        function deleteNote() {

            document.getElementById("systemMessage").innerText = "Note slettet.";
        }
        function shareNote() {
            alert("Not Implementet");
        }
